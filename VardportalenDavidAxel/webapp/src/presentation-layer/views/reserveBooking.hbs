<h3 class="title is-3">Boka tid</h3>

{{#if errorsBookings.length}}
<h3 class="title is-3"> errors in booking database:</h3>
<ul>
    {{#each errorsBookings}}
    <li>{{this}}</li>
    {{/each}}
</ul>
{{/if}}
{{#if errorsSpecialitys.length}}
<h3 class="title is-3"> errors in booking database:</h3>

<ul>
    {{#each errorsSpecialitys}}
    <li>{{this}}</li>
    {{/each}}
</ul>
{{/if}}

{{#if bookings.length}}
{{#if specialitys.length}}
<div class="bookingFormDiv">
    <form action="/bookings/reserve" method="post" id="bookingForm">
        <label for="whichBooking">Vilken tid och datum?:</label>
        <select id="bookingID" name="time And Date">
            {{#each bookings}}
            <option value="{{this.bookingID}}">{{this.appointmentDate}} {{this.appointmentTime}}</option>
            {{/each}}
        </select>
        <br>
        <label for="Category">Vilken sorts undersökning:</label>
        <select id="Category" name="Category">
            {{#each specialitys}}
            <option value="{{this.specialityID}}">{{this.specialityName}}</option>
            {{/each}}
        </select>
        <br>
        <label for="QuestionSmoking">Röker du:</label>
        <input type="checkbox" id="QuestionSmoking" name="QuestionSmoking" value="false">
        <br>

        <div id="wrapper">
            <label for="yes_no_covid_radio">Har du haft covid?</label>
            <p>Yes
                <input type="checkbox" name="yes" value="false">
            </p>
            <p>No <input type="checkbox" name="no" value="false"> </p>
            <input class="button" type="submit" id="postNewBooking" value="Skapa bokning">
            <br>
            <div>
    </form>
</div>


{{/if}}
{{/if}}